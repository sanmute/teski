# Development Dockerfile for Vite React frontend
FROM node:20-alpine

WORKDIR /app

# Copy package files first for better caching
COPY package.json package-lock.json ./

# Install dependencies and update browserslist
RUN npm ci && npx update-browserslist-db@latest -y

# Copy source files (will be overridden by volume mounts in dev)
COPY . .

# Use Docker-specific vite config if it exists
RUN if [ -f vite.config.docker.ts ]; then cp vite.config.docker.ts vite.config.ts; fi

# Expose Vite dev server port
EXPOSE 5173

# Default command (overridden in docker-compose.yml)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
