# Provider keys
OPENAI_API_KEY=sk-...
OPENAI_MINI_MODEL=gpt-4.1-mini
OPENAI_PRO_MODEL=gpt-4.1

ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MINI_MODEL=claude-3-5-haiku-20241022
ANTHROPIC_PRO_MODEL=claude-3-5-sonnet-20241022

# Local LLM server base URL
LOCAL_LLM_BASE_URL=http://127.0.0.1:8001

# LLM request controls
LLM_TIMEOUT_S=30
LLM_MAX_RETRIES=2
LLM_BACKOFF_S=0.6

# Currency conversion knob (leave 1.0 if already EUR)
EUR_MULTIPLIER=1.0

# Nightly analytics jobs
ENABLE_ANALYTICS_JOBS=true
# minute hour dom month dow (UTC)
ANALYTICS_CRON=0 2 * * *

# Feedback spend cap
FEEDBACK_MONTHLY_CAP_EUR=50.0
FEEDBACK_CAP_MODE=mini-only

# Deep learning / Whisper
ENABLE_WHISPER=true
WHISPER_PROVIDER=local
WHISPER_MODEL_BASE=tiny
OPENAI_API_KEY=sk-...

# Pilot mode settings
PILOT_MODE=true
PILOT_NAME="Teski Pilot A"
INVITE_CODE_SALT="change-me"
MAIL_WEBHOOK_URL=""
ADMIN_BASIC_AUTH_USER="teski"
ADMIN_BASIC_AUTH_PASS="pilot"
REPORT_S3_BUCKET=""
ALLOWED_EMAIL_DOMAIN=""
